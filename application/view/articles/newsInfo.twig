{% extends '_templates/layout.twig' %}

{% block description %}
    <h1>{{ description[0].Titre }}</h1>
    <p>{{ description[0].Texte }}</p>
{% endblock %}

{% block body %}
    <div class="jumbotron container newsInfo">
        <p>{{ actualite.titre }}</p>
        <img class="sizefix" src="{{ URL }}img/News/{{ actualite.id_image }}" alt="img"/>
        <p class="date">{{ actualite.Date }}</p>
    </div>
    <div id="com">
    <div class="jumbotron container comNews">
        <div class="formBlock">
            <h3>Ajouter un commentaire :</h3>

            <form class="form-inline" action="{{ URL }}articles/newsInfo/{{ actualite.id }}" method="POST">
                <div class="form-group">
                    <label class="sr-only" for="Pseudo">Pseudo</label>
                    <input type="text" name="pseudo" class="form-control" id="Pseudo" placeholder="Votre pseudo (Obligatoire)">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="Commentaire">Commentaire</label>
                    <textarea id="Commentaire" name="comAdd" class="form-control" rows="1" cols="50" placeholder="Votre commentaire (Obligatoire)"></textarea>
                </div>
                <input class="btn btn-primary" id="sub" type="submit" name="ajouter" value="Envoyer"
                       onclick="return confirm('Le commentaire doit être accepté par l\'administrateur.')">
            </form>
        </div>
        {% for com in selectCom %}
            {% if com.grade == 0 %}
            {% else %}
                <p>{{ com.pseudo }} : {{ com.commentaire }}</p>
            {% endif %}
        {% endfor %}
        </div>
    </div>
{% endblock %}

